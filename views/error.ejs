<%- include('./partials/header') %>

  <div style="width: 220px; height: 170px; margin-top: 100px;" class="mx-auto position-relative">
    <img src="images/hero-sky.png" style="width: 170px; left: 25px; top: 25px;" class="position-absolute"
      alt="The sky above the ocean" />
    <img src="/images/hero-cloud.png" style="width: 80px; top: 55px; left: -40px;" class="position-absolute"
      purpose="cloud-1" alt="A grayish-blue cloud" />
    <img src="/images/hero-cloud.png" style="width: 80px; top: 45px; left: -40px;" class="position-absolute"
      purpose="cloud-2" alt="Another grayish-blue cloud" />
    <img src="/images/hero-ship.png" style="width: 160px; bottom: 50px; left: 18px;" class="position-absolute"
      purpose="ship"
      alt="A ship hovering a few feet over the surface of the water, bearing a flagpole with the Sails.js logo" />
    <img src="/images/hero-water.png" style="width: 170px; bottom: 40px; left: 25px;" class="position-absolute"
      alt="The shadow of the floating ship on the water" />
  </div>

  <div class="d-flex align-items-center justify-content-center vh-10">
    <div class="text-center">
      <h1 class="display-1 fw-bold text-primary">
        <%= error.status %>
      </h1>
      <hr>
      <h4>
        <%= message %>
      </h4>
      <a href="/threads/threads-new" class="wave-btn" style="margin-top: 40px;">
        <span>SAIL TO HOME</span>
        <div class="liquid"></div>
      </a>
    </div>
  </div>

  <%- include('./partials/footer') %>